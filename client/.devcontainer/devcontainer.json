// .devcontainer/devcontainer.json
{
    "name": "React Dev Container",
    "build": {
      "dockerfile": "Dockerfile",
      "context": ".."
    },
    "settings": {
      "terminal.integrated.shell.linux": "/bin/bash"
    },
    "extensions": [
      "dbaeumer.vscode-eslint",        // ESLint f체r Linting
      "esbenp.prettier-vscode"         // Prettier f체r Code-Formatierung
    ],
    "forwardPorts": [3000],            // Port f체r die React-App
    "postCreateCommand": "npm install", // Installiere alle Abh채ngigkeiten nach Erstellung des Containers
    "postStartCommand": "npm start",    // Starte die React-App automatisch nach dem Start des Containers
    "remoteUser": "node"               // Standardbenutzer
  }
  