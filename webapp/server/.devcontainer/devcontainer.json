{
    "name": "Python 3.12 Server",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "customizations": {
        "vscode": {
            "settings": {
                "editor.formatOnSave": true,
                "python.formatting.provider": "black"
            },
            "extensions": [
                "ms-python.python",
                "ms-azuretools.vscode-docker",
                "ms-python.black-formatter"
            ]
        }
    },
    "forwardPorts": [
        5000
    ],
    "remoteUser": "root"
}

